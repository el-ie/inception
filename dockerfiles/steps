
Run apt-get update -y \
&& apt-get install mariadb-server -y \
&& apt-get install nginx -y \
&& apt-get install wget -y \
&& apt-get install vim -y \
&& mkdir -p /srv/www \
&& wget https://wordpress.org/latest.tar.gz \
&& tar xzf latest.tar.gz -C /srv/www/ \
&& chown -R www-data /srv

chmod -R 777 /srv
service mysql start
service nginx start
cd /srv/www/wordpress/
cp wp-config-sample.php wp-config.php
vim wp-config.php
vim wp-config.php
cd /etc
cd mysql/
vim mariadb.cnf
cd mariadb.cnf
cd mariadb.c
cd mariadb.conf.d/
cat my.cnf
cd /srv/www/wordpress/
cat wp-config.php
vim wp-config.php
service wordpress status

apt-get install php

vim wp-config.php
cd wp-content
cat index.php 
vim wp-config.php
service nginx status
service apache2 status

